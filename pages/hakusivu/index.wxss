/* input框 */
.passinput {
  background: #f3ebec;
  height: 35px;
  padding: 20rpx;
}
.inputuuu {
  display: flex;
  text-align: center;
  background: #fff;
  width: 100%;
  height: 65rpx;
  border-radius: 5px;
  line-height: 65rpx;
  justify-content: center;
}

.inputuuu icon {
  margin: 15rpx;
  justify-content:flex-star;
}

/* tab切换 */
.tab{
  display: flex;
  justify-content : space-around;
  padding: 20rpx;
  border-bottom: 2rpx solid #eee;
}
.good-item{
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 2px solid #eee;
}
.good-item image{
    width: 200rpx;
    height: 200rpx;
    flex-shrink: 0;
}
.good-item-right{
  flex: 1;
  padding-left:20rpx; 
  display: flex;
  /* 把轴倒过来 垂直*/
  flex-direction: column;
  /* 上下对齐 */
  justify-content: space-between;
}
.good-title{
  /* 文字超出两行显示省略号 */
 display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
overflow: hidden;
}
.price{
  color: red;
  font-size: 22px;
}
.price text{
  font-size: 12px;
}
/* 底部下拉文字 */
.text-zise{
  padding: 20rpx;
  font-size: 30rpx;
  color: #ccc;
  text-align: center;
}