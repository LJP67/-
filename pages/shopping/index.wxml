<view class="container">
 <!-- 收货地址 -->
    <view class="address" wx:if="{{formdz.name}}">
        <view class="address-info">
            <view>收货人：{{formdz.name}}</view>
            <view class="tel">{{formdz.tel}}</view>
        </view>
        <view class="0">
            收货地址：{{formdz.detail}}
        </view>
        <image mode="aspectFill" src="../images/2.png"></image>
    </view>

 <!-- 收货地址 -->
    <view class="address" bindtap="handshow"
    wx:if="{{!formdz.name}}"
    >
        <view class="address-info">
            <view>获取收货地址</view>
            <view class="tel"></view>
        </view>
        <image mode="aspectFill" src="../images/2.png"></image>
    </view>






  <!-- 购物车商品列表的头部 -->
    <view class="goods-list-title">
        <view class="iconfont iconRectangleCopy9"></view>
        优购生活馆
    </view>

    <!-- 商品列表 -->
    <view class="goods-list">
        <!-- 商品的单项, 需要循环的 -->
        <view class="goods-item" wx:for="{{ goods }}" wx:key="index">
            <icon type="success" color="red"></icon>
            <navigator url="/pages/detailpage/index?keyword={{item.goods_id}}">
              <image mode="aspectFill" src="{{item.goods_small_logo}}"></image>
            </navigator>
            <!-- 商品信息右侧 -->
            <view class="goods-item-right">
                <view class="goods-title">
                    {{item.goods_name}}
                </view>
                <view class="goods-info">
                    <view class="goods-price">
                        <text>￥</text>{{item.goods_price}}
                    </view>
                    <!-- 商品的数量 -->
                    <view class="goods-number">
                    <!-- 减一 -->
                        <view
                         class="calc-button"
                          bindtap="numplus"
                         data-number="{{-1}}"
                         data-index="{{index}}" 
                         >-</view>
                         <!-- 内容 -->
                        <input 
                        value="{{item.number}}"
                        data-index="{{index}}"
                        type="number"
                        bindinput="handnunber"
                        ></input>
                        <!-- 加一 -->
                        <view 
                        data-number="{{1}}"
                        data-index="{{index}}" 
                        class="calc-button" 
                        bindtap="numplus"
                        >
                        +
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>

  <!-- 全选和总价格 -->
    <view class="checkout">
        <view class="allselect">
            <icon type="success" color="red"></icon>
            全选
        </view>
        <view class="allprice">
            <view class="allprice-top">合计
                <text>
                    <text>￥</text>{{zjgprice}}
                </text>
            </view>
            <view class="allprice-btm">包含运费</view>
        </view>
        <view class="checkout-btn">
            结算
        </view>
    </view>





    <!-- 结尾 -->
</view>